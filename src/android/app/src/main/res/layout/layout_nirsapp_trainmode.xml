<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/layout_trainmode"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constrainedHeight="true"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/btn_scan">

    <TextView
        android:id="@+id/tv_train_result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Spinner
        android:id="@+id/sp_train_labels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="20sp"
        android:minWidth="200dp"
        app:layout_constraintBottom_toTopOf="@id/tv_train_result"/>

    <TextView
        android:id="@+id/tv_train_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_train_label"
        app:layout_constraintBottom_toTopOf="@id/sp_train_labels"/>

    <TextView
        android:id="@+id/tv_train_instructions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="false"
        android:focusable="false"
        android:linksClickable="false"
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_train_label" />

</android.support.constraint.ConstraintLayout>